<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="br.com.bitwiselab.jano.model">
	<class name="Usuario" table="USUARIO">
		<id name="id" column="IDUSUARIO" access="field" unsaved-value="null" type="long">
			<generator class="sequence">
				<param name="sequence">s_usuario</param>
			</generator>
		</id>
		<property name="login" column="LOGIN" not-null="true" />
		<property name="senha" column="SENHA" not-null="true" access="field" />
		<set name="permissoes" table="USUARIOPERMISSAO" lazy="false" >
			<key column="IDUSUARIO" not-null="true"/>
			<element type="PermissaoType" column="IDPERMISSAO"/>
		</set>
		<many-to-one name="pessoa" column="IDPESSOA" 
			class="br.com.bitwiselab.jano.model.Pessoa" lazy="false" />
	</class>
</hibernate-mapping>